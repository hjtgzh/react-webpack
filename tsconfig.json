{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "noUnusedLocals": false,
    "strictPropertyInitialization": false, // error TS2564: Property 'name' has no initializer and is not definitely assigned in the constructor.
  },
  "include": ["./src/api/api.d.ts", "./src/**/*", "./global.d.ts", "./typings.d.ts"],
  "exclude": ["node_modules", "dist", "build", "mock"]
}
